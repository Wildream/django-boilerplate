#!/bin/bash

targets=()

for file in $(ls ansible/*.ini)
do
  filename=$(basename $file)
  target="${filename%.*}"
  targets+=($target)
done

function join {
  local IFS="$1"
  shift
  echo "$*"
}
if [ -z "$2" ]
then
  TAGS=all
else
  TAGS=$2
fi

if [ -f ansible/$1.ini ]
then
  cd ansible
  ansible-playbook -i $1.ini site.yml --tags $TAGS
else
  echo usage: $0 '<'$(join '|' "${targets[@]}")'>'
  exit -1
fi
