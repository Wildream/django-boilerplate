#!upstart
#{{ ansible_managed }}

description "Upstart script to readthedocs service"
author "Erik Moroz"

env LC_ALL=C.UTF-8
env LANG=C.UTF-8

start on startup
stop on shutdown

console log
kill timeout 20
limit nofile 65536 65536
respawn

setuid {{ deploy_user }}
setgid {{ deploy_group }}

chdir {{ api_src_dir }}

exec {{ virtualenv_dir }}/bin/mkdocs serve --no-livereload
